<Window x:Class="Catalogo._preferencias.PreferenciasFrm"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="PreferenciasFrm" Height="300" Width="300">
    <Grid>
        <Grid x:Name="grilla">
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="60px"/>
            </Grid.RowDefinitions>
            <StackPanel Name="stack" HorizontalAlignment="Left" VerticalAlignment="Top" Grid.Row="0"/>
            <Grid Margin="0,0,0,0" Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="50*"/>
                    <ColumnDefinition Width="50*"/>
                    <ColumnDefinition Width="50*" />
                </Grid.ColumnDefinitions>
                <Button Name="OKButton" Content="OK" HorizontalAlignment="Center" VerticalAlignment="Top" Width="75" Grid.Column="0" Click="OKButton_Click_1"/>
                <Button Name="ResetButton" Content="Reset" HorizontalAlignment="Center" VerticalAlignment="Top" Width="75" Grid.Column="1" Click="ResetButton_Click_1"/>
                <Button Name="CancelButton" Content="Cancel" HorizontalAlignment="Center" VerticalAlignment="Top" Width="75" Grid.Column="2" Click="CancelButton_Click_1"/>
            </Grid>

        </Grid>
    </Grid>
</Window>
